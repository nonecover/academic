<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.jakomulski.calculator.MainActivity">
    <TextView
        android:text=""
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/operations" />
    <TextView
        android:text="NULL"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:id="@+id/currentNumber" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:text="CE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_ce"
            android:layout_weight="1" />
        <Button
            android:text="C"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_c"
            android:layout_weight="1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <NumberPicker
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/scaleNumberPicker" />
        </RelativeLayout>
        <Button
            android:text="history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_history"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
        android:layout_weight="1">
    <Button
        android:text="7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button_seven"
        android:layout_weight="1" />
    <Button
        android:text="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button_eight"
        android:layout_weight="1" />
    <Button
        android:text="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button_nine"
        android:layout_weight="1" />
    <Button
        android:text="/"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button_divison"
        android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_four"
            android:layout_weight="1" />
        <Button
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_five"
            android:layout_weight="1" />
        <Button
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_six"
            android:layout_weight="1" />
        <Button
            android:text="*"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_multiply"
            android:layout_weight="1" />
    </LinearLayout >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_one"
            android:layout_weight="1" />
        <Button
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_two"
            android:layout_weight="1" />
        <Button
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_three"
            android:layout_weight="1" />
        <Button
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_subtract"
            android:layout_weight="1" />
    </LinearLayout >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:text=","
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_coma"
            android:layout_weight="1" />
        <Button
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_zero"
            android:layout_weight="1" />
        <Button
            android:text="+"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_add"
            android:layout_weight="1" />
        <Button
            android:text="="
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_solve"
            android:layout_weight="1" />
    </LinearLayout >
</LinearLayout >
